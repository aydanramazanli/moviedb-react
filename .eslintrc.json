{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],

    "rules": {
        "semi": ["error", "always"],
        "quotes": [2, "single", {"allowTemplateLiterals": true}],
        "react/react-in-jsx-scope": "off",  
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
    }

}